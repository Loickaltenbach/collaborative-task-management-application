# Environment Configuration for Production
# Copy this file to .env and update with your actual values

# Database Configuration
POSTGRES_DB=taskdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_super_secure_database_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_must_be_at_least_256_bits_long_for_security

# Port Configuration
DB_PORT=5432
BACKEND_PORT=8080
FRONTEND_PORT=4200

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,https://yourdomain.com

# Logging
LOG_LEVEL=INFO

# IMPORTANT SECURITY NOTES:
# 1. Never commit the .env file
# 2. Use strong, unique passwords
# 3. Generate a secure JWT secret (you can use: openssl rand -base64 64)
# 4. Change all default values before deploying to production
